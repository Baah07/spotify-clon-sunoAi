---
// layouts/Layout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>


<style is:global>
  :root {
  
  }
  html {
    font-size: 62.5%; /* 62.5% de 16px = 10px (1rem) */
    box-sizing: border-box;
    font-family: "circular Sp", system-ui, sans-serif;
    background: #000;
    color: white;
  
  }
  body {
    font-family: "CircularSp", system-ui, sans-serif, Arial, sans-serif; /* Aseguramos que se aplique en todo el cuerpo */
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-Light) format("otf");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-Book) format("otf");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-BookItalic) format("otf");
    font-weight: 400;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-Medium) format("otf");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-MediumItalic)
      format("otf");
    font-weight: 500;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-Bold) format("otf");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-Black) format("otf");
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "CircularSp";
    src: url(/assets/fonts/CircularSpotifyText-BlackItalic) format("otf");
    font-weight: 900;
    font-style: italic;
    font-display: swap;
  }
</style>
<!-- "is:global" es una directiva que indica que estos estilos son globales, los que se ven en toda la pagina, no por compoenentes. -->
<!--Estilos globales -->
